<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/pokemon_position_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:text="From 1 to 20"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pokemon_feed"
        android:layout_above="@id/pokemon_fetch_next"
        android:layout_below="@id/pokemon_position_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"/>
    <Button
        android:id="@+id/pokemon_fetch_next"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:padding="8dp"/>
</RelativeLayout>